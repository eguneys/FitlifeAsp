<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />

        @Styles.Render("~/Content/bootstrap/base") 
        @Styles.Render("~/Content/fontawesome")
        @Styles.Render("~/Content/css")
        @Styles.Render("~/Content/Boldex")
        <link href="http://fonts.googleapis.com/css?family=Titillium+Web:400,200,200italic,300,300italic,400italic,600,600italic,700,700italic,900|Open+Sans:400,300,300italic,400italic,600,600italic,700,700italic,800,800italic" rel="stylesheet" type="text/css" />

        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
           <div class="wrapper">
            <div class="masthead">
                <div class="navbar navbar-static-top">
                    <div class="navbar-inner">
                        <div class="container" style='min-height: 7em;'>
                            <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
                            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </a>
     
                            <!-- Be sure to leave the brand out there if you want it shown -->
                            <a class="brand" href="#">Fitlife</a>

                            <!-- Everything you want hidden at 940px or less, place within here -->
                            <div class="nav-collapse collapse">
                                <!--
                                
                                 .nav, .navbar-search, .navbar-form, etc -->
                                <ul class="nav pull-right">
                                @{ Html.RenderAction("Menu", "Nav"); }
                                @{ Html.RenderAction("Signin", "Nav"); }
                                </ul>
                            </div><!--/.nav-collapse -->
                        </div>
                    </div>
                </div>   
            </div><!--/.masthead -->
            <div>
            @if (TempData["message"] != null)
            {
                <div class="alert">
                @TempData["message"]
                </div>
            }                
            @RenderBody()
            </div>
            <footer class="footer">
                <div class="container">
                    <div class="row">
                        <div class="span3 widget">
                            <h5>About Us</h5>
                            <p>We say what we do, we do what we say, and we're looking forward to prove it to you.</p>
                            <ul class="vcard">
                                <li>
                                    <span class="vcard-icon"><i class="icon-home"></i></span>                                                                       
                                    <span class="vcard-text">20/3 Babor Road, Mohammadpur, Dhaka - 1230</span>
                                </li>
                                <li>
                                    <span class="vcard-icon"><i class="icon-phone"></i></span>                                                                       
                                    <span class="vcard-text">(123) 456-7890</span>
                                </li>
                                <li>
                                    <span class="vcard-icon"><i class="icon-envelope"></i></span>                                                                       
                                    <span class="vcard-text">office@example.com</span>
                                </li>
                            </ul>                           
                        </div><!--/ about us -->
                        <div class="span3 widget">
                            <h5>Recent Posts</h5>
                            <ul class="recent-posts">
                            	<li>    
                                    <a href="">
                                        <div class="post-thumb">
                                            <img src="images/blog/img_1.jpg">
                                            <span class="overlay"></span>
                                        </div>
                                        <span class="post-title">Lorem ipsum dolor sit amet, consectetur adipiscing.</span> 
                                        <span class="post-date">17 February, 2013</span> 
                                    </a>                                   
                                </li>
  				            	<li>    
                                    <a href="">
                                        <div class="post-thumb">
                                            <img src="images/blog/img_2.jpg">
                                            <span class="overlay"></span>
                                        </div>
                                        <span class="post-title">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Pellentesque sed.</span> 
                                        <span class="post-date">16 February, 2013</span> 
                                    </a>                                   
                                </li>
                                <li>    
                                    <a href="">
                                        <div class="post-thumb">
                                            <img src="images/blog/img_3.jpg">
                                            <span class="overlay"></span>
                                        </div>
                                        <span class="post-title">Lorem ipsum dolor sit amet.</span> 
                                        <span class="post-date">15 February, 2013</span>  
                                    </a>                                   
                                </li>
			                </ul>
                        </div><!--/ recent posts --> 
                        <div class="span3 widget">
                            <h5>Recent Tweets</h5>
                            <div class="tweet"></div>
                        </div><!--/ recent tweets -->                     
                        <div class="span3 widget">
                            <h5>Flickr Photos</h5>
                            <ul class="flickr"></ul>
                        </div><!--/ flickr photos -->                        
                    </div>
                </div>
            </footer><!--/.footer -->
            <section class="socket">
                <div class="container">
                    <div class="row">
                        <div class="span6">
                            <p>Copyright © 2013 Boldex. All rights reserved</p>
                        </div><!--/ copyright -->                        
                        <div class="social span6">
                            <ul class="social-list">
                                <li>Stay Connected</li>                            
                                <li><a href="#" data-toggle="tooltip" title="Faceboot"><i class="icon-facebook"></i></a></li>
                                <li><a href="#" data-toggle="tooltip" title="Google Plus"><i class="icon-google-plus"></i></a></li>
                                <li><a href="#" data-toggle="tooltip" title="Twitter"><i class="icon-twitter"></i></a></li>                                
                                <li><a href="#" data-toggle="tooltip" title="Pinterest"><i class="icon-pinterest"></i></a></li> 
                                <li><a href="#" data-toggle="tooltip" title="LinkedIn"><i class="icon-linkedin"></i></a></li>                                                       
                            </ul>     
                        </div><!--/ social links -->                        
                    </div>
                </div>
            </section><!--/.socket -->
        </div><!--/.wrapper --> 
        @RenderSection("featured", required: false)
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/moment")
        @Scripts.Render("~/bundles/Boldex")
        @RenderSection("scripts", required: false)
    </body>
</html>
