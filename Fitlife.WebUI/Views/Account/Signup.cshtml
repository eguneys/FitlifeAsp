@model Fitlife.Domain.Entities.User

@{
    ViewBag.Title = "Signup";
}
<div id="wrapper">
    <div class="mod row">
       <div class="container" style='max-width:500px;'>
           <div class="contact_form">
            <div class="your-logo">
                <h3><a href="index.html">Your Logo</a></h3>     
            </div>
            @using (Html.BeginForm())
            {
                <legend><h4>Registration</h4></legend>
                <div class="row-fluid">
                    <div class="col-md-6">
                        <a href="" class="btn btn-primary btn-block"><i class="icon-facebook"></i> Facebook Connect</a>
                    </div>  
                    <div class="col-md-6">
                        <a href="" class="btn btn-info btn-block"><i class="icon-twitter"></i> Twitter Connect</a>
                    </div>    
                </div>
                @Html.TextBoxFor(x => x.Name, new { @class = "input-block-level", @placeholder = "Full Name" })
                @Html.TextBoxFor(x => x.Email, new { @class = "input-block-level", @placeholder = "Email address" })
                @Html.PasswordFor(x => x.Password, new { @class = "input-block-level", @placeholder = "Password" })
                @Html.PasswordFor(x => x.PasswordConfirmation, new { @class = "input-block-level", @placeholder = "Retype Password" })
                <div class="row-fluid">
                    <div class="col-md-8">
                        <label class="checkbox">
                            <input type="checkbox" value="remember-me"> I agree with <a href="">terms and conditions</a>.
                        </label> 
                    </div> 
                    <div class="col-md-4">
                        <input class="styler-bg-color" type="submit" value="REGISTER">
                    </div>    
                </div>
            }
            <div class="bottom-text">
                 <p>Already have an account? @Html.RouteLink("Log in", new
{
    controller = "Account",
    action = "Login"
})</p>
            </div>
               </div>
        </div> <!-- /container -->
        </div>
    </div>